<%= render "shared/form_errors", model: @receivable %>
<%= form_with model: [@account_receivable, @receivable], class: "form" do |form| %>
  <fieldset>
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Description" %>
  </fieldset>
  <fieldset>
    <%= form.label :amount %>
    <%= form.number_field :amount, min: 0, step: 0.01, placeholder: "100.00" %>
  </fieldset>
  <div class="actions">
    <%= form.submit "Save", class: "submit" %>
  </div>
<% end %>
