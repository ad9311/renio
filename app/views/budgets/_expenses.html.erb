<ul class="flex flex-col gap-2">
  <% @expenses.each do |expense| %>
    <li class="inner-card inner-card-hover leading-none">
      <%= link_to budget_expense_path(@budget, expense) do %>
        <div class="mb-2">
          <p class="inner-card-top-label"><%= expense.expense_category.name %></p>
        </div>
        <div class="flex justify-between items-center text-sm">
          <%= expense.description %>
          <%= render "shared/expense", value: expense.amount %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
