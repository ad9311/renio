<div>
  <%= render "shared/form_errors", model: @expense %>
  <%= form_with model: [@budget, @expense], class: "form" do |form| %>
    <fieldset>
      <%= form.label :category %>
      <%= form.select :expense_category_id,
                  ExpenseCategory.all.map { |category| [category.name, category.id] },
                  { prompt: "Select a category" } %>
    </fieldset>
    <fieldset>
      <%= form.label :description %>
      <%= form.text_area :description, placeholder: "Description" %>
    </fieldset>
    <fieldset>
      <%= form.label :amount %>
      <%= form.number_field :amount, min: 0, step: 0.01, placeholder: "100.00" %>
    </fieldset>
    <div class="actions">
      <%= form.submit "Save", class: "submit" %>
    </div>
  <% end %>
</div>
