<%= form_with model: [@budget, @expense] do |form| %>
  <%= form.label :category %>
  <%= form.select :expense_category_id, ExpenseCategory.all.map { |category| [category.name, category.id] }, { prompt: "Select a category" } %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.label :amount %>
  <%= form.number_field :amount, min: 1, step: 0.01, placeholder: "100.00" %>
  <%= form.submit "Save" %>
<% end %>
